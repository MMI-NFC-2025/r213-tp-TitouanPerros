---
import PbImage from './PbImage.astro';
const offre = Astro.props;
const { adresse, favori, nombre_chambres, nombre_salle_de_bain, nom_maison, prix, superficie } = offre;
---

<div class="border border-gray-300 rounded-lg p-4 m-4 shadow-md">
    <div class="w-full h-48 overflow-hidden rounded flex items-center justify-center">
        <PbImage record={offre} recordImage="image" />
    </div>
    <div class="mt-3">
        <h3 class="my-2 text-gray-800 font-semibold">{nom_maison}</h3>
        <p class="text-gray-600 text-sm">{adresse}</p>
        <div class="my-3 grid grid-cols-2 gap-2">
            <p class="text-sm">Prix: ${prix}</p>
            <p class="text-sm">Surface: {superficie} m²</p>
            <p class="text-sm">Chambres: {nombre_chambres}</p>
            <p class="text-sm">Salles de bain: {nombre_salle_de_bain}</p>
        </div>
        {favori && <span class="inline-block bg-yellow-400 px-2 py-1 rounded text-xs">⭐ Favori</span>}
    </div>
</div>

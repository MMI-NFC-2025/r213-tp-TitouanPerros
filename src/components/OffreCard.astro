---
const { adresse, favori, nbChambres, nbSdb, nomMaison, prix, surface, imgUrl } = Astro.props;
---

<div class="border border-gray-300 rounded-lg p-4 m-4 shadow-md">
    <img src={`/${imgUrl}`} alt={nomMaison} class="w-full h-48 object-cover rounded" />
    <div class="mt-3">
        <h3 class="my-2 text-gray-800 font-semibold">{nomMaison}</h3>
        <p class="text-gray-600 text-sm">{adresse}</p>
        <div class="my-3 grid grid-cols-2 gap-2">
            <p class="text-sm">Prix: ${prix}</p>
            <p class="text-sm">Surface: {surface} m²</p>
            <p class="text-sm">Chambres: {nbChambres}</p>
            <p class="text-sm">Salles de bain: {nbSdb}</p>
        </div>
        {favori && <span class="inline-block bg-yellow-400 px-2 py-1 rounded text-xs">⭐ Favori</span>}
    </div>
</div>
